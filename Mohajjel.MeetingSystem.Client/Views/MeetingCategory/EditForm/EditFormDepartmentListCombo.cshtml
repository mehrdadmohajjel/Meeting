
@model Mohajjel.MeetingSystem.Shared.Models.Output.MeetingCategory.OutputGetAllMainDepartment[]
@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "editFormDepartmentCombo";
        settings.CallbackRouteValues = new { Controller = "MeetingCategory", Action = "GetDepartmentListForEdit" };
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "امور را انتخاب نمایید";
        settings.Properties.CallbackPageSize = 1000;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.Properties.DropDownWidth = Unit.Pixel(400);
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";
        settings.SelectedIndex = -1;
        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.OnHover;

        settings.Properties.ValueField = "DepartmentId";
        settings.Properties.ValueType = typeof(int);
        settings.Properties.Columns.Add("Title", "عنوان گروه");
        settings.Properties.Columns.Add("UnitCode", "کد");
        settings.Properties.ClientSideEvents.SelectedIndexChanged = "motorsazanClient.meetingCategory.handleEditFormDepartmentComboSelectedIndexChanged";



    }).BindList(Model).GetHtml()
