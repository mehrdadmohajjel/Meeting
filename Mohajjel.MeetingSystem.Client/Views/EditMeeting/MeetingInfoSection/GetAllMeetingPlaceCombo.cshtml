    settings =>
    {
        settings.Name = "getAllMeetingPlaceCombo";
        settings.CallbackRouteValues = new { Controller = "EditMeeting", Action = "GetAllMeetingPlaceCombo" };
        settings.Properties.NullText = "محل برگزاری جلسه را انتخاب نمایید";
