@model Mohajjel.MeetingSystem.Shared.Models.Output.MeetingCategory.OutputGetAllMainDepartment[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "getAllMainDepartmentCombo";
        settings.CallbackRouteValues = new { Controller = "EditMeeting", Action = "GetAllMainDepartmentCombo" };
        settings.Properties.NullText = "امور برگزارکننده را انتخاب نمایید";
        settings.Width = Unit.Percentage(100);
        settings.SelectedIndex = -1;
        settings.Properties.CallbackPageSize = 500;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 20;
        settings.SettingsLoadingPanel.Text = "در حال جستجو ...";

        settings.Properties.TextFormatString = "{0} - {1}";

        settings.Properties.ValueField = "DepartmentId";
        settings.Properties.ValueType = typeof(int);

        settings.Properties.Columns.Add("UnitCode", "کد امور", Unit.Percentage(30));
        settings.Properties.Columns.Add("Title", "نام", Unit.Percentage(70));

        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.editMeeting.handleGetAllMainDepartmentComboSelectedIndexChange";

    }).BindList(Model).GetHtml()


