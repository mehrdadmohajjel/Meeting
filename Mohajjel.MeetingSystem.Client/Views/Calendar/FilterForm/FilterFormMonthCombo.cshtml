@using Mohajjel.MeetingSystem.Shared.Enums

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormMonthCombo";
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "ماه را انتخاب نمایید";
        settings.SelectedIndex = -1;
        settings.Properties.CallbackPageSize = 100;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";


        settings.Properties.DropDownHeight = Unit.Pixel(280);

        settings.Properties.Items.Add("فروردین", MonthType.فروردین.GetHashCode());
        settings.Properties.Items.Add("اردیبهشت", MonthType.اردیبهشت.GetHashCode());
        settings.Properties.Items.Add("خرداد", MonthType.خرداد.GetHashCode());
        settings.Properties.Items.Add("تیر", MonthType.تیر.GetHashCode());
        settings.Properties.Items.Add("مرداد", MonthType.مرداد.GetHashCode());
        settings.Properties.Items.Add("شهریور", MonthType.شهریور.GetHashCode());
        settings.Properties.Items.Add("مهر", MonthType.مهر.GetHashCode());
        settings.Properties.Items.Add("آبان", MonthType.آبان.GetHashCode());
        settings.Properties.Items.Add("آذر", MonthType.آذر.GetHashCode());
        settings.Properties.Items.Add("دی", MonthType.دی.GetHashCode());
        settings.Properties.Items.Add("بهمن", MonthType.بهمن.GetHashCode());
        settings.Properties.Items.Add("اسفند", MonthType.اسفند.GetHashCode());

        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.calendar.handleFilterFormMonthComboSelectedIndexChange";
    }).GetHtml()