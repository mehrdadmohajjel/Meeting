@model Mohajjel.MeetingSystem.Shared.Models.Output.MeetingCategory.OutputGetAllMainDepartment[]

@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "filterFormGetAllMeetingDepartmentCombo";

        settings.CallbackRouteValues = new { Controller = "MeetingReportByDepartment", Action = "GetAllMeetingDepartmentCombo" };
        settings.Width = Unit.Percentage(100);
        settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.None;
        settings.Properties.NullText = "دسته بندی را انتخاب نمایید";
        settings.SelectedIndex = -1;
        settings.Properties.CallbackPageSize = 200;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.IncrementalFilteringDelay = 200;
        settings.SettingsLoadingPanel.Text = "در حال دریافت اطلاعات";

        settings.Properties.ValueField = "DepartmentId";
        settings.Properties.ValueType = typeof(long);

        settings.Properties.Columns.Add("Title", "نام ", Unit.Percentage(65));
        settings.Properties.Columns.Add("UnitCode", "کد امور", Unit.Percentage(35));

        settings.Properties.ItemStyle.Wrap = DefaultBoolean.True;
        settings.Properties.CaptionCellStyle.Wrap = DefaultBoolean.True;


        settings.Properties.ClientSideEvents.SelectedIndexChanged =
            "motorsazanClient.meetingReportByDepartment.handleFilterFormGetAllMeetingDepartmentComboSelectedIndexChanged";

    }).BindList(Model).GetHtml()


