@{
    ViewBag.Title = "تعریف محل برگزاری جلسات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script src="~/DX.ashx?jsfile=~/Views/MeetingPlace/JS/Index.js"></script>
}

<div class="row">
    <div class="col-xs-12 col-md-3">
        <section class="app__section">
            <div class="app__section__header">
                افزودن محل برگزاری جلسه جدید
            </div>
            <div class="app__section__body">
                @{ Html.RenderPartial("~/Views/MeetingPlace/AddForm/AddForm.cshtml"); }
            </div>
        </section>
    </div>
    <div class="col-xs-12 col-md-9">
        <section class="app__section">
            <div class="app__section__header">
                لیست
                @{ Html.RenderPartial("~/Views/Shared/Partials/_AppSectionSettings.cshtml"); }
            </div>
            <div class="app__section__body">

                <form class="app__grid-wrapper" id="gridParent">
                    @{Html.RenderAction("MeetingPlaceGrid", "MeetingPlace");}
                </form>
            </div>
        </section>
    </div>
</div>
